@page
@model CANBOOKRAM.Pages.friend.AddFriendModel
@{
    ViewData["Title"] = "Add Friends";
}

<div class="container">
    <h2>Your waiting friendship requests</h2>
    <form asp-page-handler="edit" method="post">
        <div class="row">
             <div class="col-2">Requests</div>
             <div class="col-4">@Html.DropDownList("requests",Model.FriendshipRequests, "Select")</div>
        </div>
        <button>accept</button>
    </form>
</div>
<br /><br />
<div class="container">
    <h2>Your friends</h2>
    <form asp-page-handler="View" method="post">
        <div class="row">
             <div class="col-2">Friends</div>
             <div class="col-4">@Html.DropDownList("friends",Model.FriendList, "Select")</div>
        </div>
        <button>delete</button>
    </form>
</div>
<br /><br />
<div class="container">
    <h2>Add friend</h2>
    <form method="post">
        <div class="row">
             <div class="col-2">Receiver</div>
             <div class="col-4">@Html.DropDownList("receiver",Model.Users, "Select")</div>
        </div>
        <button id="Submit" type="submit">Add Friend</button>
    </form>
</div>