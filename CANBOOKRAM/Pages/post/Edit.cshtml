@page
@model CANBOOKRAM.Pages.post.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserPost.Id" />
           
            <div class="form-group">
                <label asp-for="UserPost.Message" class="control-label"></label>
                <input asp-for="UserPost.Message" class="form-control" />
                <span asp-validation-for="UserPost.Message" class="text-danger"></span>
            </div>
           <img src="data:image;base64,@System.Convert.ToBase64String(Model.Picture)" width="80" height="80" />
           <div class="form-group">
                <input asp-for="FileUpload.FormFile" type="file" class="form-control"><br>
                <label asp-for="FileUpload.FormFile"></label>
                <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>

            </div>
          <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
